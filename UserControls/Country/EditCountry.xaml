<UserControl x:Class="Registers.UserControls.Country.EditCountry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registers.UserControls.Country"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Row="0"
                Text="{Binding PanelName}" 
                FontSize="20" 
                FontFamily="Segoe UI Black" 
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                FontWeight="Bold" 
                Margin="0 0 15 0"/>
        </Grid>

        <Separator Grid.Row="1"
                VerticalAlignment="Top"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Margin="0 15 0 0"
                Text="Country: " 
                Width="150" 
                VerticalAlignment="Center"/>
            <TextBox 
                Grid.Column="1"
                Margin="0 15 0 0"
                Text="{Binding CName, Mode=TwoWay}"
                HorizontalAlignment="Stretch"
                Width="Auto"/>

        </Grid>

        <TextBlock
            Grid.Row="3"
            Margin="0 15 0 0"
            Text="References:"
            FontWeight="Bold"
            />

        <ListView
            Grid.Row="4"
            Margin="0 5 0 0"
            ItemsSource="{Binding ReferencedLocations}"
            SelectedIndex="-1"
            VerticalAlignment="Top"
            MinHeight="25"
            Height="Auto">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding City}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock 
            Text="No references found"
            Grid.Row="4"
            Foreground="Gray"
            FontStyle="Italic"
            Margin="5 10 0 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsHitTestVisible="False"
            Visibility="{Binding HasLocationReferences, Converter={StaticResource BoolToVisibleConv}}" />


        <StackPanel 
            Grid.Row="5"
            Margin="0 5 0 0 "
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <Button
                Content="Remove"
                Margin="0 0 50 0"
                Background="#FFE2AFAF"
                IsEnabled="{Binding IsEnabled}"
                Visibility="{Binding Visibility}"
                Command="{Binding RemoveCommand}"
                Width="80"/>

            <Button
                Content="Cancel"
                Margin="0 0 10 0"
                Background="White"
                Command="{Binding CancelCommand}"
                Width="80"/>

            <Button 
                Content="{Binding ButtonName}"
                Width="80"
                Command="{Binding SaveCommand}" />

        </StackPanel>
    </Grid>
</UserControl>
