<UserControl x:Class="Registers.UserControls.EditLocation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registers.UserControls"
             xmlns:dnp="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
             xmlns:vm="clr-namespace:Registers.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="400">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
            Grid.Column="0" 
            Text="{Binding PanelName}" 
            FontSize="20" 
            FontFamily="Segoe UI Black" 
            VerticalAlignment="Center"
            FontWeight="Bold" 
            Margin="0 0 15 0"/>
        </Grid>

        <Separator Grid.Row="0"
        VerticalAlignment="Bottom"/>

        <GroupBox Grid.Row="1"
                  Margin="0 5">

            <GroupBox.Header>
                <TextBlock 
                    Foreground="DarkGray"
                    Text="General"/>
            </GroupBox.Header>

            <Grid>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock 
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0 5 0 0"
                    Text="City" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
                
                <TextBox 
                    Grid.Column="2"
                    Grid.Row="0"
                    Margin="0 5 0 0"
                    Text="{Binding CCity, Mode=TwoWay}"
                    HorizontalAlignment="Stretch"
                    Width="Auto"/>

                
                <TextBlock 
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="0 5 0 0"
                    Text="Country" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
                
                <dnp:AutoCompleteBox
                    Grid.Column="2"
                    Grid.Row="1"
                    Margin="0 5 0 5"
                    HorizontalAlignment="Stretch"
                    FilterMode="Contains"
                    ItemsSource="{Binding Countries}"
                    Text="{Binding CountryInput, Mode=TwoWay}"
                    />
                        

            </Grid>
        </GroupBox>


        <GroupBox 
            Grid.Row="4">
            <GroupBox.Header>
                <TextBlock 
                    Foreground="DarkGray"
                    Text="References"/>
            </GroupBox.Header>
            <Grid>
                <ListView
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Height="Auto"
                    ItemsSource="{Binding ReferencedCertificates}"
                    SelectedIndex="-1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock 
                    Text="No references found"
                    Foreground="Gray"
                    FontStyle="Italic"
                    Margin="5 5 0 0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    IsHitTestVisible="False"
                    Visibility="{Binding HasReferences, Converter={StaticResource BoolToVisibleConv}}" />
            </Grid>

        </GroupBox>

        <StackPanel 
            Margin="0 5 0 0"
            Grid.Row="5"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

            <Button
            Content="Remove"
            Margin="0 0 50 0"
            Background="#FFE2AFAF"
            IsEnabled="{Binding IsEnabled}"
            Visibility="{Binding Visibility}"
            Command="{Binding RemoveCommand}"
            Width="80"/>

            <Button
            Content="Cancel"
            Margin="0 0 10 0"
            Background="White"
            Command="{Binding CancelCommand}"
            Width="80"/>

            <Button 
            Content="{Binding ButtonName}"
            Width="80"
            Command="{Binding SaveCommand}" />

        </StackPanel>
    </Grid>
</UserControl>
