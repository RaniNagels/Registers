<UserControl x:Class="Registers.UserControls.StartUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registers.UserControls"
      xmlns:vm="clr-namespace:Registers.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      d:DataContext="{d:DesignInstance vm:StartupViewModel}"       >

    <Grid>
        <Border
            Background="Black"
            Margin="5 5 0 0"
            Height="202"
            Width="252"/>
        
        <Border
            Background="LightGray"
            BorderBrush="DarkGray"
            BorderThickness="3"
            Height="200"
            Width="250">


            <StackPanel
                Margin="5">
                <Button
                    Content=" Create New..."
                    Command="{Binding CreateNewFileCommand}"
                    Background="White"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    Width="155"
                    Margin="40 5 0 0"/>
                <Button
                    Content=" Open..."
                    Command="{Binding OpenFileCommand}"
                    Background="White"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    Width="155"
                    Margin="40 5 0 0"/>
                <TextBlock
                    Text="Recent files:"
                    Margin="43 10 0 0"
                    FontWeight="Bold"/>

                <ListView
                    Width="185"
                    Margin="40 0 0 0"
                    HorizontalAlignment="Left"
                    MaxHeight="105"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ItemsSource="{Binding RecentFileNames}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding}"
                                Margin="0 0 0 0"
                                Background="Transparent"
                                VerticalAlignment="Center" >
                                <TextBlock.ToolTip>
                                    <ToolTip Content="{Binding}"/>
                                </TextBlock.ToolTip>
                                <TextBlock.InputBindings>
                                    <MouseBinding
                                        MouseAction="LeftDoubleClick"
                                        Command="{Binding DataContext.OpenSelectedFileCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"/>
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            
        </Border>

        <Border 
            Background="DarkGray"
            Width="2"
            Height="175"
            Margin="-175 0 0 0"/>

        <Border 
            Background="DarkGray"
            Height="2"
            Width="170"
            Margin="-5 -70 0 0"/>
    </Grid>
</UserControl>
